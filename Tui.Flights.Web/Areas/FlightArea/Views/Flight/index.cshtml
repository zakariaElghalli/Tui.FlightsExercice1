
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<Tui.Presentation.Models.FlightViewModel>

<div class="container">

    <h2>List of flights</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-striped table-hover sortable">
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="10">No Record's found.</td>
                </tr>
            }
            else
            {
                <thead>
                    <tr class="danger">
                        <th data-defaultsign="_19">Air plane</th>
                        <th data-defaultsign="AZ">Airport Departure</th>
                        <th data-defaultsign="AZ">Airport Arrival</th>
                        <th data-defaultsign="AZ">Distance</th>
                        <th data-firstsort="desc">Duration</th>
                        <th data-defaultsign="AZ">Consumption</th>
                    
                    </tr>
                </thead>
                foreach (var item in Model)
                {
                <tr>
                    <td>@item.AirPlaine</td>
                    <td>@item.DeparturAirport</td>
                    <td>@item.ArrivalAirport</td>
                    <td>@string.Format("{0} Km", item.Distance)</td>
                    <td>@string.Format("{0} H", item.Duration)</td>
                    <td>@string.Format("{0} L", item.FuelConsumption)</td>

                    <td><a href="@Url.Action("add", new {  Area = "FlightArea"})">
                     <span class="glyphicon glyphicon-plus"></span>
                    </a></td>
                    <td><a href="@Url.Action("Edit", new { Area = "FlightArea"  , id = item.Id })">
                            <span class="glyphicon glyphicon-pencil"></span>
                    </a></td>
                    <td><a href="@Url.Action("Delete", new {  Area = "FlightArea"  , id = item.Id })">
                            <span class="glyphicon glyphicon-minus"></span>
                        </a></td>
                </tr>
                }
            }
        </table>
    </div>


</div>




